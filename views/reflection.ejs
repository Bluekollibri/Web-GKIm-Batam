<section class="jumbotron-page">
 <div class="container mt-5">
  <h2>Renungan Harian</h2>
  <% if (nama && role === 'admin') { %>
    <a href="./admins/add-reflection" class="btn btn-primary">Add Reflection</a>
  <% } %>
 </div>
</section>
<section class="filter">
  <div class="container mt-5">
    <div class="col-md-5 mt-3">
      <form action="/reflection" method="GET" class="mt-3">
        <div class="input-group">
          <input type="date" name="tanggal" class="form-control" required>
          <button class="btn btn-primary" type="submit">Filter</button>
        </div>
      </form>
      <% if (noReflectionsFound) { %>
        <div class="alert alert-warning" role="alert">
            Tidak ada refleksi ditemukan untuk tanggal yang dipilih.
        </div>
        <% } %>
    </div>
  </div>
</section>
<section class="article">
  <div class="container mt-5">
    <div class="row mt-3">
      <div class="col-md-5 mt-3">
          <% reflections.forEach((reflection) => {%>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= reflection.judul %></h5>
              <p class="card-text"><%= reflection.tanggal %></p>
              <p class="card-text"><%= reflection.ayat %></p>
              <a href="/reflection/<%= reflection.judul %>" class="btn btn-primary">Informasi</a>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>
</section>

  