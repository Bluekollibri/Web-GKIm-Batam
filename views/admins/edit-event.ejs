<form method="post" action="/event?_method=PUT">
    <h2>Edit Event Gereja</h2>
    <br>
    <input type="hidden" name="_id" value="<%= event._id %>">
    <input type="hidden" name="oldNama" value="<%= event.oldNama || event.nama %>">
      <div class="mb-3">
        <label for="nama" class="form-label">Nama Event</label>
        <input type="text" class="form-control" id="nama" name="nama" required value="<%= event.nama %>"/>
      </div>
      <div class="mb-3">
        <label for="tanggal" class="form-label">Tanggal</label>
        <input type="date" class="form-control" id="tanggal" name="tanggal" required value="<%= event.tanggal %>"/>
      </div>
      <div class="mb-3">
        <label for="deskripsi" class="form-label">Deskripsi</label>
        <textarea class="form-control" id="deskripsi" name = "deskripsi" rows="3"><%= event.deskripsi %></textarea>
        </div>
      <button type="submit" class="btn btn-primary">Ubah Data Event Gereja</button>
  </form>