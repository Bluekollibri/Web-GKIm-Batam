<section class="jumbotron-page">
  <div class="container mt-5">
    <h2>Event Gereja</h2>
  <% if (nama && role === 'admin') { %>
    <a href="./admins/add-event" class="btn btn-primary">Add Event</a>
  <% } %>
  <br>
  </div>
</section>
<section class="event">
  <div class="container mt-5">
    <div class="col">
      <div class="row mt-3">
        <% events.forEach((event) => { %>
        <div class="col-md-6 mt-3">
            <div class="card mb-3">
              <div class="card-body">
                <h4 class="card-title"><%= event.nama %></h4>
                <p class="card-text"><%= event.tanggal %></p>
                <p class="card-text"><%= event.deskripsi %></p>
                <a href="/event/<%= event.nama %>" class="btn btn-success badge rounded-pill">
                  <i class="bi bi-info-circle"> Informasi</i>
                </a>
              </div>
            </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>  
</section>